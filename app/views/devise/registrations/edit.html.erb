<h2>Account Settings</h2>
<div class="page-header">
  <h1><span class="glyphicon glyphicon-flash">   </span>Alerts</h1>
</div>
<!-- Keyword Alerts -->
<div class="form-group">
  <h3>Keyword Alerts</h3>
    <p>Receive notifications whenever any of the following terms appears in any HN post or comment </p>
  <div class="row">
    <div class="col-lg-6">
      <div class="input-group">
        <input type="text" placeholder="Enter a keyword" class="form-control">
        <span class="input-group-btn">
          <button class="btn btn-default AddAlert" type="button">Add</button>
        </span>
      </div>
    </div>
  </div>
</div>
<div class="top-buffer"> 

<!-- URL Alerts -->
<div class="form-group">
  <h3>URL Alerts</h3>
    <p>Receive notifications whenever people terms appears in any HN post or comment </p>
  <div class="row">
    <div class="col-lg-6">
      <div class="input-group">
        <input type="text" placeholder="Enter a keyword" class="form-control">
        <span class="input-group-btn">
          <button class="btn btn-default AddAlert" type="button">Add</button>
        </span>
      </div>
    </div>
  </div>
</div>
<div class="top-buffer"> 

<!-- Reply Alerts -->
<div class="form-group">
  <h3>Reply Alerts</h3>
    <p>Receive notifications whenever someone comment on your posts or comments </p>
  <div class="row">
    <div class="col-lg-6">
      <div class="input-group">
        <button type="button" class="btn btn-default">Default button</button>
      </div>
    </div>
  </div>
</div>
<div class="top-buffer"> 

<!-- upvote Alerts -->
<div class="form-group">
  <h3>Reply Alerts</h3>
    <p>Receive notifications whenever any of your posts are upvoted </p>
  <div class="row">
    <div class="col-lg-6">
      <div class="input-group">
        <button type="button" class="btn btn-default">Default button</button>
      </div>
    </div>
  </div>
</div>
<div class="top-buffer"> 

<!--Alert Frequency -->

<div class="page-header">
  <h1><span class="glyphicon glyphicon-time">   </span> Alert Frequency</h1>
</div>
<div class="btn-group btn-group-justified" role="group" aria-label="...">
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-default">Immediately</button>
  </div>
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-default">Daily</button>
  </div>
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-default">Weekly</button>
  </div>
</div>


<!--Account Info -->
<div class="page-header">
  <h1><span class="glyphicon glyphicon-user"></span> Account Information</h1>
</div>


<%= form_for(resource, as: resource_name,url: registration_path(resource_name), html: { method: :put ,:class=>"form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
   <%= f.label :email ,:class=>"col-sm-2 control-label"%>
    <div class="col-xs-4">
      <%= f.email_field :email,:class=>"form-control",:placeholder=>"email" ,autofocus: true %>
    </div>
  </div> 

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
   <%= f.label :password ,:class=>"col-sm-2 control-label"%>
    <div class="col-xs-4">
      <%= f.password_field :password,:placeholder=>"leave blank if you don't want to change it" ,autocomplete: "off",:class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
   <%= f.label :password_confirmation ,:class=>"col-sm-2 control-label"%>
    <div class="col-xs-4">
      <%= f.password_field :password_confirmation,:placeholder=>"leave blank if you don't want to change it" ,autocomplete: "off",:class=>"form-control" %>
    </div>
  </div>
 
  <div class="form-group">
   <%= f.label :current_password ,:class=>"col-sm-2 control-label"%>
    <div class="col-xs-4">
      <%= f.password_field :current_password,:placeholder=>"we need your current password to confirm your changes" ,autocomplete: "off",:class=>"form-control" %>
    </div>
  </div>

  <div><%= f.submit "Update" %></div>
<% end %>

<!--Cancel my account -->
<div class="page-header">
  <h1><span class="glyphicon glyphicon-remove-circle"></span> Cancel my account</h1>
</div>


<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" },:class=>"btn btn-danger", method: :delete %></p>

<%= link_to "Back", :back %>
